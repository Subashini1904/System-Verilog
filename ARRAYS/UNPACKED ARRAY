module unpacked_array_demo;
  logic data [7:0];  
  initial begin
    data[0] = 1'b1;
    data[1] = 1'b0;
    data[2] = 1'b1;
    data[3] = 1'b0;
    $display("data[0] = %b", data[0]);
    $display("data[1] = %b", data[1]);
    $display("data[2] = %b", data[2]);
    $display("data[3] = %b", data[3]);
    $finish;
  end
endmodule


//OUTPUT//
xcelium> run
data[0] = 1
data[1] = 0
data[2] = 1
data[3] = 0
