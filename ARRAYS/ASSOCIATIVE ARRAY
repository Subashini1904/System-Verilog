module associative_array;
int marks[string];   
 initial begin
    marks["Maths"] = 85;
    marks["Physics"] = 90;
    marks["Chem"] = 88;
    $display("Maths = %0d", marks["Maths"]);
    $display("Physics= %0d", marks["Physics"]);
    $display("Chem = %0d", marks["Chem"]);
    $finish;
  end
endmodule

//OUTPUT//
xcelium> run
Maths   = 85
Physics= 90
Chem   = 88
