module packed_struct;
  struct packed {
    bit[3:0] a;
    bit[3:0] b;
  } data;
  initial begin
    data.a=4'b1010;
    data.b=4'b1100;
    $display("a = %b", data.a);
    $display("b = %b", data.b);
    $display("Whole struct = %b", data); 
  end
endmodule


//OUTPUT//
xcelium> run
a = 1010
b = 1100
Whole struct = 10101100
